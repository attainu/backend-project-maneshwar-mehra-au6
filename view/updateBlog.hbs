<form action="/updateblog?id={{this._id}}" method="POST">
<div class="container">
    <div class="title">
    TITLE:<input type="text" name="Blogtitle" value="{{Blogtitle}}" readonly>
    </div>
    <div class="about">
    ABOUT:<input type="text" name="explain" value="{{explain}}" style="font-size: 18pt; height: 500px; width:60vw;">
    <span>{{error.explain}}</span>
    </div>
    <div class="radio">
        MAKE BLOK AS PUBIC OR PRIVATE:<br>
        <input type="radio" id="private" name="private" value="private">
        <label for="private">PRIVATE</label><br>
        <input type="radio" id="public" name="private" value="public">
        <label for="public">PUBLIC</label><br>
    </div>
    <button type="submit">SUBMIT</button>
</div>
</form>
<br>
<a href="/allBlogs">CANCEL</a>